{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "noEmitOnError": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/*",
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
  ]
}